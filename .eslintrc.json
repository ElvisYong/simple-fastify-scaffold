{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
              "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "default-param-last": "off",
        "guard-for-in": "off",
        "no-continue": "off",
        "import/no-unresolved": "off",
        "import/no-named-default": "off",
        "linebreak-style": "off",
        "max-classes-per-file": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "warn",
        "no-return-await": "off",
        "no-param-reassign": "off",
        "semi": ["error", "always"],
        "@typescript-eslint/lines-between-class-members": [
            "error",
            "always",
            { "exceptAfterSingleLine": true }
          ],
          "indent": "off",
          "max-len": "off",
          "prefer-destructuring": "off",
          "@typescript-eslint/comma-dangle": "off",
          "quotes": "off",
          "no-shadow": "off",
          "no-restricted-syntax": "off",
          "no-use-before-define": "off",
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ]
    }
}